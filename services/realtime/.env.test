# Centrifugo configuration for local development and testing
CENTRIFUGO_API_URL=http://localhost:8000/api
CENTRIFUGO_API_KEY=test_api_key
CENTRIFUGO_TOKEN_SECRET=test_token_secret

# Centrifugo Docker configuration
CENTRIFUGO_CLIENT_TOKEN_HMAC_SECRET_KEY=test_token_secret
