# Centrifugo configuration for local development and testing
CENTRIFUGO_API_URL=http://localhost:8000/api
CENTRIFUGO_API_KEY=test_api_key
CENTRIFUGO_TOKEN_SECRET=test_token_secret

# Centrifugo Docker configuration
CENTRIFUGO_CLIENT_TOKEN_HMAC_SECRET_KEY=test_token_secret
CENTRIFUGO_HTTP_API_KEY=test_api_key
CENTRIFUGO_CLIENT_ALLOWED_ORIGINS=*
CENTRIFUGO_LOG_LEVEL=debug

# Test configuration
NEXT_PUBLIC_CENTRIFUGO_WS_URL=ws://localhost:8000/connection/websocket

# Channel namespace configuration for concurrent tests
# Each namespace allows client subscriptions so tests can subscribe to channels
CENTRIFUGO_CHANNEL_NAMESPACES=[{"name":"org","allow_subscribe_for_client":true},{"name":"user","allow_subscribe_for_client":true},{"name":"profileJoinRequest","allow_subscribe_for_client":true},{"name":"global","allow_subscribe_for_client":true}]
# Allow subscription to channels without namespace prefix
CENTRIFUGO_CHANNEL_WITHOUT_NAMESPACE={"allow_subscribe_for_client":true,"allow_publish_for_client":true}
