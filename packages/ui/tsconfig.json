{
  "extends": "@op/typescript-config/react-library.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    ".storybook/**/*.ts",
    ".storybook/**/*.tsx",
    ".",
    "src",
    "turbo"
  ],
  "exclude": ["dist", "build", "node_modules"]
}
