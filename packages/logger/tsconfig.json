{
  "extends": "@op/typescript-config/base.json",
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "./src", // Point baseUrl to the new src directory
    "paths": {
      "@/*": ["./*"] // Alias will now resolve relative to ./src
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
